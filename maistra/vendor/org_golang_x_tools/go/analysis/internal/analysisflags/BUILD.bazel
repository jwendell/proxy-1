load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "go_default_library",
    srcs = [
        "flags.go",
        "help.go",
    ],
    importpath = "golang.org/x/tools/go/analysis/internal/analysisflags",
